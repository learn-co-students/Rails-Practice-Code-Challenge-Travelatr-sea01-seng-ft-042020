<h1>Posts:</h1>
<ul><% @posts.each do |post|%>
    <li><%= link_to(post.title, post_path(post))%></li>
    <ul>
        <li><%= "Author: #{post.blogger_name}" %>
        <li><%= "Destination: #{post.destination_location_name}" %>
        <li><%= pluralize(post.likes,"Like") %></li>
    </ul>
<% end %></ul>