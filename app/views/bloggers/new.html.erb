<h1>New Blogger:</h1>

<%= render("form_errors") %>

<%= form_with(model: @blogger) do |f| %>
    <%= f.label(:name) %>
    <%= f.text_field(:name) %>
    <br>
    <%= f.label(:bio) %>
    <%= f.text_area(:bio) %>
    <br>
    <%= f.label(:age) %>
    <%= f.number_field(:age) %>
    <br>
    <%= f.submit %>
<% end %>